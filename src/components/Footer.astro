---
interface Props {
  github: string;
}
const { github } = Astro.props;
---

<style>
  footer {
    max-width: 850px;
    text-align: center;
    border-top: 5px dotted var(--accent);
    padding: 20px 0;
    margin: auto;
    margin-bottom: 2rem;
    color: var(--grey);
  }
  a {
    display: inline-block;
    text-decoration: auto;
    font-weight: initial;
  }
</style>

<footer>
  Made by the Toki Pona community.<br />
  Uses the <a href="https://github.com/AcipenserSturio/selo-components">selo</a>
  theme.<br />
  Contribute on <a href={github}>GitHub</a>!<br />
</footer>
