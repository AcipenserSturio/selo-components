<!-- Language toggle -->
<script is:inline>
  const language = (() => {
    const localStorageLang = localStorage?.getItem("language") ?? "";
    if (["eng", "tok"].includes(localStorageLang)) {
      return localStorageLang;
    }
    return "eng";
  })();

  if (language === "eng") {
    document.documentElement.classList.remove("lang-tok");
  } else {
    document.documentElement.classList.add("lang-tok");
  }

  window.localStorage.setItem("language", language);

  const handleToggleLanguage = () => {
    const element = document.documentElement;
    element.classList.toggle("lang-tok");

    const isTok = element.classList.contains("lang-tok");
    localStorage.setItem("language", isTok ? "tok" : "eng");
  };
</script>
