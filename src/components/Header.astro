---
import DarkModeToggle from "./DarkModeToggle.astro";
const SITE_TITLE = "temporary";
---

<style>
  header {
    position: relative;
    max-width: 850px;
    text-align: center;
    border-bottom: 5px dotted var(--accent);
    padding: 20px 0;
    margin: auto;
    margin-top: 10px;
  }
  img {
    max-width: 100%;
    max-height: 150px;
  }
  a:has(img) {
    display: block; /*fix focus styling on main header*/
  }
  a {
    text-decoration: none;
    /* color: var(--txt); */
  }
</style>

<header>
  <a href="/">
    <img alt={SITE_TITLE} src="/header.svg" />
  </a>
  <DarkModeToggle />
</header>
